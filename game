import random

user_action = input("Enter your choice\n"
                    "1=Rock\n"
                    "2=paper\n"
                    "3=Scissor ")

computer_action = random.randint(1, 3)  # type: int
print(computer_action)
if user_action == computer_action:
    print('Tie')


elif user_action==1:
        if computer_action== 2:
            print ("Player wins")
        else:
            print ("Computer wins")


elif user_action==2:
        if computer_action==1:
            print ("Player wins")
        else:
            print ("Computer wins")

elif user_action==3:
        if computer_action==1:
            print ("Computer wins")

else:
            print ("Player wins")
